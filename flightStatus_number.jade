        script.
            $('.camNavbar__toggle').click(function () {
                $('.camNavbar__main').addClass('open');
            });

            $('.camNavbar__close, .camNavbar__backdrop').click(function () {
                $('.camNavbar__main').removeClass('open');
            });
            if (screen.width < 768) {
                $('.camNavbar__link').click(function () {
                    $(this).next('.camNavbar__sub').slideToggle(200);
                    $(this).parent('li').toggleClass('active');
                });
            };
            if (screen.width < 768) {
                $('.footer__top').css('background-image', 'url("images/footer-bg-mobile.jpg")')
            };
        script.
            $('.viewMore').click(function () {
                var statusShow = $(this).parents('tr').find('.statusShow');
                if(statusShow.hasClass('show')){
                    statusShow.removeClass('show');
                    $(this).html('<span>View Status</span>' + '<i class="fas fa-caret-right"></i>');
                } else {
                    statusShow.addClass('show');
                    $(this).html('<span>Hide Status</span>' + '<i class="fas fa-caret-down"></i>');
                }

            });



